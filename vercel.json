{
  "version": 2,
  "builds": [
    {
      "src": "manage.py",
      "use": "@vercel/python",
      "config": {
        "zeroConfig": true
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/build",
        "buildCommand": "npm install --unsafe-perm && chmod +x ./node_modules/.bin/react-scripts && npm run build"
      }
    }
  ],
  "env": {
    "NODE_VERSION": "21"
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/manage.py"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/build/index.html"
    }
  ]
}
